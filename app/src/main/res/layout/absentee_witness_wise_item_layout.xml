<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="45dp"
            >

            <TextView
                android:id="@+id/sr_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/table_head_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/fir_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/table_head_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="67"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@drawable/table_head_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="2023"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ps_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_head_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Simdega"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/district_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_head_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="District"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/court_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/table_head_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Court"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/hearing_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_head_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/w_witness_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_head_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Witness Type"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/witness_testified"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_head_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Witness Testified"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/remarks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_head_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Remarks"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="13sp" />

        </LinearLayout>

    </TableRow>

</LinearLayout>