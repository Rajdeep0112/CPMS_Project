<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:minHeight="45dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sr_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/fir_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="fir no"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="year"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ps_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="ps name"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/district_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="district name"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/gr_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="GR Number"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tr_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="TR Number"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/st_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="St Number"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/court_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/testified"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/testified_remarks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone" />


        </LinearLayout>

    </TableRow>

</LinearLayout>