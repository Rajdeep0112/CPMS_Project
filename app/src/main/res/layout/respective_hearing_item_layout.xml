<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sr_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Sr no."
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/h_hearing_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Date"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/h_court_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Court Name"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/h_witnesses"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Witnesses"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/h_bailer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Bailer"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/h_accused"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=" accused"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/h_remarks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Remarks"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/h_testified"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="testified"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

    </TableRow>

</LinearLayout>