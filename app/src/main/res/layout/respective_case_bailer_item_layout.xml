<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sr_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Sr no."
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/b_accused_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Accused"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/b_bail_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Bail Date"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/b_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=" Name"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/b_fathers_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Father Name"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/b_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/b_phone_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=" +91 744444"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/b_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=" abc@gmail.com"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/b_id_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text=" 44444"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/b_remarks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_item_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="remarks"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

    </TableRow>
</LinearLayout>